
<%= render 'friends/lookup' %>

<% if @friendships.size > 0 %>
  <table class="table">
    <thead>
      <tr>
        <th colspan="3" class="page header">
          <h2>My Friends</h2>
        </th>
      </tr>
      <tr>    
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @friendships.each do |fs| %>
        <tr>
          <td><%= fs.full_name %></td>
          <td><%= fs.email %></td>
          <td>
            <%= link_to 'View Profile', user_path(fs), class:"btn btn-primary btn-sm" %>
            <%= link_to 'Remove Friend', friendship_path(fs), method: :delete, data: {confirm: "Are You Sure??"}, class:'btn btn-sm btn-danger' %>
          </td>  
        </tr>
      <% end %>
    </tbody>
  </table>    

<% else %>
  <div class="col-lg-12 row">
    <p class="lead">You Don't Have Friends</p>
  </div>

<% end %>
