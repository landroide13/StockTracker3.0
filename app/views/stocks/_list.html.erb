
<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Symbol</th>
      <th scope="col">Close Price</th>
      <% if @user.id == current_user.id %>
        <th scope="col">Actions</th>
      <% end %>  
    </tr>
  </thead>
  <tbody>
    <% @user_stocks.each do |us| %>
    <tr>
      <td><%= us.name %></td>
      <td><%= us.ticker %></td>
      <td><%= us.last_price %></td>
      <% if @user.id == current_user.id %>
        <td><%= link_to 'Delete This Stock', user_stock_path(us), method: :delete, data: {confirm: "Are You Sure??"}, class:'btn btn-sm btn-danger' %></td>
      <% end %>  
    </tr>
    <% end %>
  </body>
</table>    